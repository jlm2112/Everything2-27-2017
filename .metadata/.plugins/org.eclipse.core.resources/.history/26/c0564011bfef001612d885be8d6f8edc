					}
					System.out.println("What would you like to do?");
					System.out.println("1. Feed stacy a mouse");
					int intResponse = input.nextInt();
					String stringResponse;
					stacy.tick();
					if (response == 1) {
						stacy.giveAMouse();
					}
					
					
					
					System.out.println("Stacy has died. Do you want to try again?");
